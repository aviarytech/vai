{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Interaction Credential",
  "description": "",
  "type": "object",
  "properties": {
    "credentialSubject": {
      "type": "object",
      "title": "Credential Subject",
      "properties": {
        "modelinfo": {
          "title": "modelInfo",
          "type": "object",
          "properties": {
            "name": {
              "title": "name",
              "type": "string",
              "description": "Name of the AI model"
            },
            "version": {
              "title": "version",
              "type": "string",
              "description": "Version of the AI model"
            },
            "provider": {
              "title": "provider",
              "type": "string",
              "description": "Provider of the AI model"
            }
          }
        },
        "input": {
          "title": "input",
          "type": "object",
          "properties": {
            "prompt": {
              "title": "prompt",
              "type": "string",
              "description": "The input prompt provided to the AI model"
            },
            "timestamp": {
              "title": "timestamp",
              "type": "string",
              "description": "ISO timestamp when the input was provided"
            }
          }
        },
        "output": {
          "title": "output",
          "type": "object",
          "properties": {
            "response": {
              "title": "response",
              "type": "string",
              "description": "The response generated by the AI model"
            },
            "timestamp": {
              "title": "timestamp",
              "type": "string",
              "description": "ISO timestamp when the output was generated"
            }
          }
        }
      },
      "required": [
        "modelinfo",
        "input",
        "output"
      ]
    }
  },
  "required": [
    "credentialSubject"
  ]
}